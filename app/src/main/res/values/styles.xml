<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TestDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Dialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="BaseTextInputLayout" parent="ThemeOverlay.Material3.AutoCompleteTextView.FilledBox">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="boxCornerRadiusTopStart">@dimen/mid_12</item>
        <item name="boxCornerRadiusTopEnd">@dimen/mid_12</item>
        <item name="boxStrokeWidth">@dimen/small_2</item>
        <item name="errorEnabled">true</item>
        <item name="boxBackgroundColor">@color/colorBlueLight</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="startIconTint">@color/colorBlue</item>
    </style>

    <style name="ButtonText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/mid_18</item>
    </style>

    <style name="BaseTextInputEditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>

    <style name="BaseButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/ButtonText</item>
        <item name="cornerRadius">@dimen/mid_24</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/match_constraint</item>
    </style>

    <style name="YellowButton" parent="BaseButton">
        <item name="android:minHeight">@dimen/large_56</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/colorYellow</item>
    </style>


</resources>