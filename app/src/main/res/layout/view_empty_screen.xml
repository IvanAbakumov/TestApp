<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:padding="@dimen/mid"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/large_xxxx"
            android:layout_height="@dimen/large_xxxx"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/empty_text"
            android:src="@drawable/cactus" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/mid"
            android:layout_marginTop="@dimen/mid_22"
            android:layout_marginBottom="@dimen/mid"
            android:gravity="center_horizontal|bottom"
            android:text="@string/empty_text"
            android:textColor="@color/black"
            android:textSize="@dimen/font.20" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>